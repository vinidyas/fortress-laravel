# Local development with SQLite
APP_NAME="Fortress Gestao Imobiliaria"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://127.0.0.1:8000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (SQLite local). Update the path below to your workspace path.
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/fortress-laravel/database/database.sqlite

SEED_ADMIN_PASSWORD=admin123
SEED_SAMPLE_DATA=true

SESSION_DRIVER=file
SESSION_LIFETIME=120

SANCTUM_STATEFUL_DOMAINS=127.0.0.1,127.0.0.1:5173,127.0.0.1:8000,localhost,localhost:5173,localhost:8000
FRONTEND_URL=http://localhost:5173

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=file
CACHE_PREFIX=fortress_

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail to log while developing
MAIL_MAILER=log
MAIL_FROM_ADDRESS=dev@fortress.local
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
