# Application
APP_NAME=Fortress
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://sistema.fortressempreendimentos.com.br

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=info

# Database (MySQL 8 container)
DB_CONNECTION=mysql
DB_HOST=fortress-db
DB_PORT=3306
DB_DATABASE=fortress
DB_USERNAME=fortress
DB_PASSWORD=change-me

# Cache / Queue / Session
BROADCAST_DRIVER=log
CACHE_STORE=redis
CACHE_PREFIX=fortress
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=fortress-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (ajuste conforme seu provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=contato@fortressempreendimentos.com.br
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_HMR_HOST=localhost
